# Animated globe ASCII art
function animate() {
	local animation=${1:-movglobe}
	local speed=${2:-9600}
	# More examples: http://artscene.textfiles.com/vt100/
	curl -s "http://artscene.textfiles.com/vt100/${animation}.vt" | pv -q -L "${speed}"
}

